{
    "app-id": "io.github.dummerle.rare",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "rare",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=all",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        {
            "name": "desktop-entry",
            "buildsystem": "simple",
            "build-commands": [
                "install -D rare.desktop /app/share/applications/io.github.dummerle.rare.desktop",
                "install -D io.github.dummerle.rare.appdata.xml /app/share/metainfo/",
                "install -D Rare.png /app/share/icons/hicolor/16x16/apps/io.github.dummerle.rare.png",
                "install -D Rare.png /app/share/icons/hicolor/48x48/apps/io.github.dummerle.rare.png",
                "install -D Rare.png /app/share/icons/hicolor/128x128/apps/io.github.dummerle.rare.png"

            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/Dummerle/Rare/main/misc/rare.desktop",
                    "sha256": "a7a6a6f95ea18fd85f23ef7b68a12feda2abd69faf922f621f1234603e18afb2"
                },
                {
                    "type": "file",
                    "path": "io.github.dummerle.rare.appdata.xml"
                },
                {
                    "type": "file",
                    "url": "https://github.com/Dummerle/Rare/blob/main/rare/resources/images/Rare.png?raw=true",
                    "sha256": "30a9b15b8997be34436f799138275db19094e52884dbdf0239bb665bc4bd16d2"

                }

            ]
        },
        {
            "name": "rare",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"rare\" --no-build-isolation --no-deps"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/4a/e9/36a99937d07fef364c643d2e1e50cfceb09ef3792907343d43135f298811/Rare-1.8.9-py3-none-any.whl",
                    "sha256": "ef9e0e2a5075aced0bb98f15d7b6e766484a096c3a066c42f98ef2d100ec38ac"
                }
            ]
        },
        "python3-modules.json",
        "python3-pyqt5.json"
    ]
}
